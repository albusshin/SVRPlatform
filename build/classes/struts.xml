<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.serve.static.browserCache" value="false"/>
    <constant name="struts.configuration.xml.reload" value="true"/>

    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
        
        <action name="signin" class="signin" method="execute">
        	<result name="success" >/WEB-INF/home.jsp</result>
        	<result name="fail">/WEB-INF/signin.jsp</result>
        </action>
        
		<action name="signup" class="signup" method="execute">
        	<result name="success" >/WEB-INF/home.jsp</result>
        	<result name="fail">/WEB-INF/signup.jsp</result>
        </action>
    
         <action name="index" class="index" method="execute">
        	<result name="LoggedIn" >/WEB-INF/home.jsp</result>
        	<result name="CookieNotFound" >/WEB-INF/index.html</result>
        	<result name="NotAuthenticated">/WEB-INF/signin.jsp</result>
        </action>
         	
         <action name="SigningIn">    
		 	<result >/WEB-INF/signin.jsp</result>    
		 </action>   
		 
         <action name="SigningUp">    
		 	<result >/WEB-INF/signup.jsp</result>    
		 </action>

         <action name="uploadgraph" class="com.SVRPlatform.action.UploadGraph">  
	            <result name="success">/WEB-INF/index.html</result>  
	            <result name="input">/upload.jsp</result>  
       		</action>  
         
         <action name="submitbug" class="submitbug" method="execute">
	 		<result name="BugSubmitSuccess">/WEB-INF/bugpage.jsp</result>
	 		<result name="BugSubmitFailed">/submitbug.jsp</result>  
        </action>
         
         
    </package>
    


    <!--include file="example.xml"/-->

    <!-- Add packages here -->

</struts>

