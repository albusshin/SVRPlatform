<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.serve.static.browserCache" value="false"/>
    <constant name="struts.configuration.xml.reload" value="true"/>
    

    <package name="default" namespace="/" extends="struts-default">
		<interceptors>
		        <interceptor name="check" class="com.SVRPlatform.interceptor.CheckInterceptor"/>
		        <interceptor-stack name="checkStack">
		        	<interceptor-ref name="defaultStack" />
		        	<interceptor-ref name="check" 		/>
		        </interceptor-stack>
		</interceptors>
        
        
        <default-action-ref name="index" />
     
        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>
        
        
        
        <action name="SigningIn" class="signin" method="execute">
        	<result name="success" type="redirect" >/home.jsp</result>
        	<result name="fail">/signin.jsp</result>
        </action>
        
		<action name="SigningUp" class="signup" method="execute">
        	<result name="success" type="redirect" >/home.jsp</result>
        	<result name="fail">/signup.jsp</result>
        </action>
    
         <action name="index" class="index" method="execute">
        	<result name="LoggedIn" type="redirect" >/home.jsp</result>
        	<result name="CookieNotFound" >/WEB-INF/index.jsp</result>
        	<result name="NotAuthenticated" type="redirect">/signin.jsp</result>
        </action>
         	
         <action name="signInAutomatically" class="signInAutomatically">  
            <interceptor-ref name="checkStack"/>  
		 	<result name="FailToSignIn">/signin.jsp</result>    
		 	<result name="SignInAtomatically">/home.jsp</result>
		 </action>   
		 
           <action name="signInAutomaticallyUp" class="signInAutomatically">
 			<interceptor-ref name="checkStack"/>     
		 	<result name="FailToSignIn">/signup.jsp</result>    
		 	<result name="SignInAtomatically">/home.jsp</result>
		 </action>   

 		
		<action name="RetrievePassword" class="retrievepassword" method="execute">
        	<result name="success" >/WEB-INF/emailSent.jsp</result>
        	<result name="fail">/WEB-INF/emailNotSent.jsp</result>
        </action>
        
		<action name="CheckingHash" class="checkinghash" method="execute">
        	<result name="success" >/WEB-INF/ResetPassword.jsp</result>
        	<result name="fail">/WEB-INF/error.jsp</result>
        </action>
        
		<action name="ResetPassword" class="resetpassword" method="execute">
        	<result name="success" type="redirect">/index</result>
        	<result name="passwordTooShort">/WEB-INF/ResetPassword.jsp</result>
        	<result name="passwordAgainstRule">/WEB-INF/ResetPassword.jsp</result>
        	<result name="fail" type="redirect">/WEB-INF/error.jsp</result>
        </action>
        
		<action name="Logout" class="com.SVRPlatform.action.Logout" method="execute">
        	<result name="success" type="redirect">logout.jsp</result>
        </action>
        
         <action name="uploadgraph" class="com.SVRPlatform.action.UploadGraph">  
	            <result name="success">/WEB-INF/index.jsp</result>  
	            <result name="input">/upload.jsp</result>  
       		</action>  
         
         <action name="submitbug" class="submitbug" method="execute">
	 		<result name="BugSubmitSuccess">/WEB-INF/bugpage.jsp</result>
	 		<result name="BugSubmitFailed">/submitbug.jsp</result>  
        </action>
         
         
    </package>
</struts>

